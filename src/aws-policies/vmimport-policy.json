{
  "Version":"2012-10-17",
  "Statement":[
     {
        "Effect":"Allow",
        "Action":[
           "s3:GetBucketLocation",
           "s3:GetObject",
           "s3:ListBucket"
        ],
        "Resource":[
           "arn:aws:s3:::io.salte.packer-cache",
           "arn:aws:s3:::io.salte.packer-cache/*"
        ]
     },
     {
        "Effect":"Allow",
        "Action":[
           "ec2:ModifySnapshotAttribute",
           "ec2:CopySnapshot",
           "ec2:RegisterImage",
           "ec2:Describe*"
        ],
        "Resource":"*"
     }
  ]
}
